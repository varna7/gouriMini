<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_small"
    android:paddingEnd="@dimen/padding_avg"
    android:paddingTop="@dimen/padding_small">
    <!--android:paddingStart="@dimen/padding_avg"-->

    <TextView
        android:id="@+id/Sender_name"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/margin_avg"
        android:background="@drawable/circle"
        android:gravity="center"
        android:maxEms="1"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        android:text="A"

      />

    <androidx.core.widget.Space
        android:layout_width="@dimen/space_avg"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/chat_rounded_rect_bg"
            >

        <TextView
            android:id="@+id/chatMsgTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_huge"
            android:padding="@dimen/padding_small"
            android:textSize="12sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/DateMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Nov 28"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="italic"
            tools:ignore="RtlCompat"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/textmsglabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat"
                android:text="Sent at"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_marginRight="6dp"/>


            <TextView
                android:layout_alignParentBottom="@+id/message_user"
                android:layout_alignParentEnd="true"
                android:id="@+id/Timemsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="RtlCompat"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:text="12:00"/>

        </LinearLayout>


    </LinearLayout>









</LinearLayout>